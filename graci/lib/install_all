#!/bin/bash

#
# Conditional compilation flags
#
args=""
for var in "$@"; do
    args+=" $var"
done

args+=" -DHDF5_INC_DIR=/home/schuurm/software/hdf5/include"
args+=" -DHDF5_LIB_DIR=/home/schuurm/software/hdf5/lib"

#
# Build all the libraries
#
topdir=`pwd`
for lib in overlap bitci; do

    cd $lib

    if [ -d build ]; then
	rm -r build/*
    else
	mkdir build
    fi

    cd build
    cmake ../ -DCMAKE_INSTALL_PREFIX=../../ $args
    make
    make install
    
    cd $topdir
    
done

